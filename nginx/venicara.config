server {
    listen 80;
    server_name venicara.shop www.venicara.shop;

    # Redirect all HTTP to HTTPS
    return 301 https://venicara.shop$request_uri;
}

server {
    listen 443 ssl http2;
    server_name venicara.shop;

    ssl_certificate /etc/letsencrypt/live/venicara.shop/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/venicara.shop/privkey.pem;
    include /etc/letsencrypt/options-ssl-nginx.conf;
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem;

    # Allow bigger uploads (e.g., 20 MB)
    client_max_body_size 20M;

    # Serve static files directly (images, CSS, JS)
    location /public/ {
        alias /home/ubuntu/projects/Venicara;
        try_files $uri $uri/ =404;
    }

    # Proxy all other requests to Node.js app
    location / {
        proxy_pass http://127.0.0.1:3000;
        proxy_http_version 1.1;

        # Forward important headers for HTTPS and sessions
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;

        # Disable caching for dynamic content
        proxy_cache_bypass $http_upgrade;
    }

    # Logging
    access_log /var/log/nginx/venicara.access.log;
    error_log /var/log/nginx/venicara.error.log;
}
