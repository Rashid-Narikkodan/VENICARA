<%- include('../partials/admin/header.ejs')%>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

<main class="container-fluid py-4 flex-grow-1 min-vh-100 bg-light">

  <!-- Filter Buttons -->
  <div class="row mb-3">
    <div class="col-12 d-flex gap-2">
      <a href="/admin/dashboard?filter=daily" class="btn btn-sm <%= filter==='daily' ? 'btn-dark' : 'btn-outline-dark'%>">Daily</a>
      <a href="/admin/dashboard?filter=weekly" class="btn btn-sm <%= filter==='weekly' ? 'btn-dark' : 'btn-outline-dark'%>">Weekly</a>
      <a href="/admin/dashboard?filter=monthly" class="btn btn-sm <%= filter==='monthly' ? 'btn-dark' : 'btn-outline-dark'%>">Monthly</a>
      <a href="/admin/dashboard?filter=yearly" class="btn btn-sm <%= filter==='yearly' ? 'btn-dark' : 'btn-outline-dark'%>">Yearly</a>
    </div>
  </div>

  
<!-- Top Stats Cards -->
<div class="row g-3 mb-4">
  <div class="col-12 col-md-8">
    <h4><%=filter.charAt(0).toUpperCase()+filter.slice(1)%> Reports</h4>
    <div class="row">

      <!-- Total Sales -->
      <div class="col-6 col-md-3">
        <div class="card shadow-sm border-0 rounded-4 h-100 text-center" style="background:#fba6bf69;">     
          <div class="card-body">
            <div class="bi bi-currency-dollar fs-3 text-danger p-2"></div>
            <p class="small text-muted mb-1">Total Sales</p>
            <h4 class="fw-bold">$<%= dashboardData.totalSales %></h4>
          </div>
        </div>
      </div>

      <!-- Orders Delivered -->
      <div class="col-6 col-md-3">
        <div class="card shadow-sm border-0 rounded-4 h-100 text-center" style="background:#e3d2959d;">
          <div class="card-body">
            <div class="bi bi-truck fs-3 text-warning mb-2"></div>
            <p class="small text-muted mb-1">Orders Delivered</p>
            <h4 class="fw-bold"><%= dashboardData.totalOrders %></h4>
          </div>
        </div>
      </div>

      <!-- Products Sold -->
      <div class="col-6 col-md-3">
        <div class="card shadow-sm border-0 rounded-4 h-100 text-center" style="background:#a0efa089;">
          <div class="card-body">
            <div class="bi bi-box-seam fs-3 text-success mb-2"></div>
            <p class="small text-muted mb-1">Products Sold</p>
            <h4 class="fw-bold"><%= dashboardData.productsSold %></h4>
          </div>
        </div>
      </div>

      <!-- New Customers -->
      <div class="col-6 col-md-3">
        <div class="card shadow-sm border-0 rounded-4 h-100 text-center" style="background:#754fc649;">
          <div class="card-body">
            <div class="bi bi-person-plus fs-3 text-primary mb-2"></div>
            <p class="small text-muted mb-1">New Customers</p>
            <h4 class="fw-bold"><%= dashboardData.newCustomers %></h4>
          </div>
        </div>
      </div>

    </div>
  </div>
</div>

  <!-- Product Sold Chart -->
  <div class="row g-3 mb-4">
    <div class="col-md-9 col-12">
      <div class="row">
    <div class="col-12 mb-3">
      <div class="card shadow-sm border-0 rounded-4">
        <div class="card-body">
          <h6 class="mb-3">Products Sold (<%= filter.charAt(0).toUpperCase() + filter.slice(1) %>)</h6>
          <div style="height:200px;">
            <canvas id="productSoldChart"></canvas>
          </div>
        </div>
      </div>
    </div>
  </div>

    <div class="col-12">
      <div class="card shadow-sm border-0 rounded-4">
        <div class="card-body">
          <h6 class="mb-3">Revenue (<%= filter.charAt(0).toUpperCase() + filter.slice(1) %>)</h6>
          <div style="height:250px;">
            <canvas id="revenueChart"></canvas>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="col-md-3 col-12">
    <div class="rounded-3 p-4" style="background:rgb(232, 232, 232)">
      <p class="fw-bold fs-5 text-center">Top 10 Products</p>
      <%dashboardData.topProducts.forEach((product)=>{%>
        <div class="row py-2 rounded-4 mb-2" style="background:rgb(230, 230, 230)">
          <span class="col-3">
          <img src="<%=product.img[0]?.url%>" alt="products" class="img-fluid rounded-circle" style="width:100%">
           </span>
           <span class="fw-semibold col-9">
            <span><%=product.name%></span> <br>
            <span class="text-success text-center"><%=product.totalSold%> items sold</span>
          </span>
        </div>
        <%})%>
    </div>
  </div>
  </div>
</main>
</div>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
  // Products Sold Chart
  new Chart(document.getElementById("productSoldChart"), {
    type: "line",
    data: {
      labels: <%- JSON.stringify(dashboardData.productsSoldLabels) %>,
      datasets: [{
        label: "Products Sold",
        data: <%- JSON.stringify(dashboardData.productsSoldData) %>,
        borderColor: "#0d6efd",
        backgroundColor: "rgba(13,110,253,0.1)",
        tension: 0.4,
        fill: true,
        pointBackgroundColor: "#0d6efd"
      }]
    },
    options: { maintainAspectRatio: false, plugins: { legend: { display: true } } }
  });

  // Revenue Chart
  new Chart(document.getElementById("revenueChart"), {
    type: "line",
    data: {
      labels: <%-JSON.stringify(dashboardData.revenueLabels)%>,
      datasets: [{
        label: "Revenue",
        data: <%- JSON.stringify(dashboardData.revenueChartData) %>,
        borderColor: "#28a745",
        backgroundColor: "rgba(30, 169, 23, 0.2)",
        tension: 0.4,
        fill: true
      }]
    },
    options: { maintainAspectRatio: false, plugins: { legend: { display: true } } }
  });
</script>

<%- include('../partials/admin/footer.ejs')%>
