<%- include('../partials/admin/header.ejs')%>
<link
  rel="stylesheet"
  href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css"
/>

<main class="container-fluid py-4 flex-grow-1 min-vh-100 bg-light">

  <!-- Filter Buttons -->
  <div class="row mb-4">
    <div class="col-12 d-flex flex-wrap gap-2 justify-content-center justify-content-md-start">
      <a href="/admin/dashboard?filter=daily" class="btn btn-sm <%= filter==='daily' ? 'btn-dark' : 'btn-outline-dark'%>">Daily</a>
      <a href="/admin/dashboard?filter=weekly" class="btn btn-sm <%= filter==='weekly' ? 'btn-dark' : 'btn-outline-dark'%>">Weekly</a>
      <a href="/admin/dashboard?filter=monthly" class="btn btn-sm <%= filter==='monthly' ? 'btn-dark' : 'btn-outline-dark'%>">Monthly</a>
      <a href="/admin/dashboard?filter=yearly" class="btn btn-sm <%= filter==='yearly' ? 'btn-dark' : 'btn-outline-dark'%>">Yearly</a>
    </div>
  </div>

  <!-- Title -->
  <div class="row mb-3">
    <div class="col-12 text-center text-md-start">
      <h4 class="fw-bold">
        <%= filter.charAt(0).toUpperCase() + filter.slice(1) %> Reports
      </h4>
    </div>
  </div>

  <!-- Stats Cards -->
  <div class="row g-3 mb-4">
    <!-- Total Sales -->
    <div class="col-6 col-md-3">
      <div class="card shadow-sm border-0 rounded-4 h-100 text-center" style="background:#fba6bf69;">
        <div class="card-body">
          <i class="bi bi-currency-dollar fs-3 text-danger mb-2"></i>
          <p class="small text-muted mb-1">Total Sales</p>
          <h4 class="fw-bold">â‚¹<%= dashboardData.totalSales %></h4>
        </div>
      </div>
    </div>

    <!-- Orders Delivered -->
    <div class="col-6 col-md-3">
      <div class="card shadow-sm border-0 rounded-4 h-100 text-center" style="background:#e3d2959d;">
        <div class="card-body">
          <i class="bi bi-truck fs-3 text-warning mb-2"></i>
          <p class="small text-muted mb-1">Orders Delivered</p>
          <h4 class="fw-bold"><%= dashboardData.totalOrders %></h4>
        </div>
      </div>
    </div>

    <!-- Products Sold -->
    <div class="col-6 col-md-3">
      <div class="card shadow-sm border-0 rounded-4 h-100 text-center" style="background:#a0efa089;">
        <div class="card-body">
          <i class="bi bi-box-seam fs-3 text-success mb-2"></i>
          <p class="small text-muted mb-1">Products Sold</p>
          <h4 class="fw-bold"><%= dashboardData.productsSold %></h4>
        </div>
      </div>
    </div>

    <!-- New Customers -->
    <div class="col-6 col-md-3">
      <div class="card shadow-sm border-0 rounded-4 h-100 text-center" style="background:#754fc649;">
        <div class="card-body">
          <i class="bi bi-person-plus fs-3 text-primary mb-2"></i>
          <p class="small text-muted mb-1">New Customers</p>
          <h4 class="fw-bold"><%= dashboardData.newCustomers %></h4>
        </div>
      </div>
    </div>
  </div>

  <!-- Charts and Top Products -->
  <div class="row g-4">

    <!-- Charts Section -->
    <div class="col-12 col-lg-9">
      <div class="row g-4">
        <!-- Products Sold Chart -->
        <div class="col-12">
          <div class="card shadow-sm border-0 rounded-4">
            <div class="card-body">
              <h6 class="fw-semibold mb-3">
                Products Sold (<%= filter.charAt(0).toUpperCase() + filter.slice(1) %>)
              </h6>
              <div style="height: 250px;">
                <canvas id="productSoldChart"></canvas>
              </div>
            </div>
          </div>
        </div>

        <!-- Revenue Chart -->
        <div class="col-12">
          <div class="card shadow-sm border-0 rounded-4">
            <div class="card-body">
              <h6 class="fw-semibold mb-3">
                Revenue (<%= filter.charAt(0).toUpperCase() + filter.slice(1) %>)
              </h6>
              <div style="height: 250px;">
                <canvas id="revenueChart"></canvas>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Top Products Section -->
    <div class="col-12 col-lg-3">
      <div class="card shadow-sm border-0 rounded-4 h-100">
        <div class="card-body">
          <p class="fw-bold fs-5 text-center mb-3">Top 10 Products</p>
          <div class="d-flex flex-column gap-2">
            <% dashboardData.topProducts.forEach((product) => { %>
              <div class="d-flex align-items-center gap-2 p-2 rounded-4 bg-light">
                <img src="<%= product.img[0]?.url %>" alt="product" class="img-fluid rounded-circle" style="width:45px; height:45px; object-fit:cover;">
                <div class="flex-grow-1">
                  <span class="fw-semibold"><%= product.name %></span><br>
                  <small class="text-success"><%= product.totalSold %> sold</small>
                </div>
              </div>
            <% }) %>
          </div>
        </div>
      </div>
    </div>

  </div>
</main>
</div>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
  // Products Sold Chart
  new Chart(document.getElementById("productSoldChart"), {
    type: "line",
    data: {
      labels: <%- JSON.stringify(dashboardData.productsSoldLabels) %>,
      datasets: [{
        label: "Products Sold",
        data: <%- JSON.stringify(dashboardData.productsSoldData) %>,
        borderColor: "#0d6efd",
        backgroundColor: "rgba(13,110,253,0.1)",
        tension: 0.4,
        fill: true,
        pointBackgroundColor: "#0d6efd"
      }]
    },
    options: { maintainAspectRatio: false, responsive: true, plugins: { legend: { display: true } } }
  });

  // Revenue Chart
  new Chart(document.getElementById("revenueChart"), {
    type: "line",
    data: {
      labels: <%- JSON.stringify(dashboardData.revenueLabels) %>,
      datasets: [{
        label: "Revenue",
        data: <%- JSON.stringify(dashboardData.revenueChartData) %>,
        borderColor: "#28a745",
        backgroundColor: "rgba(40,167,69,0.2)",
        tension: 0.4,
        fill: true
      }]
    },
    options: { maintainAspectRatio: false, responsive: true, plugins: { legend: { display: true } } }
  });
</script>

<%- include('../partials/admin/footer.ejs')%>
