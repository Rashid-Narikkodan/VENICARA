<%- include('../partials/admin/header.ejs')%>
  <%- include('../partials/admin/sidebar.ejs')%>
    <main class="flex-grow-1 min-vh-100 p-3">
      <div class="container-fluid">
        <div class="row align-items-center mb-5">
          <div class="col-md-6">
            <h1>Products List</h1>
          </div>
          <div class="col-md-6 d-flex justify-content-end gap-2">
            <form action="/admin/products" method="GET" class="d-flex gap-2 w-100">
            <input type="text" name="search" class="form-control w-50" placeholder="Search..." value="<%= search %>">
            <button class="btn btn-dark">Search</button>
            </form>
            <a href="/admin/products/add"><button class="btn btn-dark">New</button></a>
          </div>
        </div>
        <div class="table-responsive shadow rounded-3 bg-white">
          <table class="table table-hover align-middle mb-0">
            <thead class="table-dark">
              <tr>
                <th>No.</th>
                <th>Product</th>
                <th>Product Image</th>
                <th>Base Price</th>
                <th>Category</th>
                <th>Total Stock</th>
                <th>Variants</th>
                <th>Status</th>
                <th>Added On</th>
                <th class="text-center">Actions</th>
              </tr>
            </thead>
            <tbody>
              <% products.forEach(product=> { %>
                <%count++%>
                <tr>
                  <td class="text-center">
                    <%= count %>
                  </td>
                  <td class="text-center">
                    <%= product.name %>
                  </td>
                  <td class="text-center">
                    <img src="<%=product.image%>" alt="product img" width="50">
                  </td>
                 <td class="text-center">
                  <%= product.basePrice%>â‚¹
                  </td>
                  <td class="text-center">
                    <%= product.categoryName %>
                  </td>
                  <td class="text-center">
                    <%= product.totalStock %>
                  </td>
                  <td>
                    <span class="badge bg-primary">
                      <%=product.variantLabel%>
                    </span>
                  </td>
                  <td>
                   <button type="button" onclick="toggleProductActive('<%=product._id%>')" class="badge <%= product.isAvailable?'bg-success':'bg-danger'%>">
                    <%=  product.isAvailable? 'Available' : 'Not Available' %>
                  </button>
                  </td>
                  <td>
                    <%=product.addedOn%>
                  </td>
                  <td class="text-center">
          
                    <a href="/admin/products/edit/<%=product._id%>"><button class="btn btn-sm btn-outline-primary"><i class="fa fa-pen"></i></button></a>
              
                    <form action="/admin/products/<%=product._id%>?_method=PATCH" method="POST" class="d-inline">
                      <button type="submit" class="btn btn-sm btn-outline-danger" onclick="return confirm('Are you sure you want to delete this product?')"><i class="fa fa-trash"></i></button>
                    </form>
                  </td>
                </tr>
                <% }) %>
            </tbody>
          </table>
        </div>
      </div>
      <!-- //pagination -->
      <div class="d-flex justify-content-end ">
      <nav aria-label="Page navigation">
        <ul class="pagination justify-content-end flex-wrap p-3">
          <% if (currentPage> 1) { %>
            <li class="page-item">
              <a class="page-link bg-dark" href="?page=<%= currentPage - 1 %>&limit=<%= limit %>">
                <i class="fa-solid fa-caret-left text-white"></i>
              </a>
            </li>
            <% } else { %>
              <li class="page-item disabled">
                <span class="page-link bg-dark"><i class="fa-solid fa-caret-left text-white"></i></span>
              </li>
              <% } %>
                <!-- Page Numbers -->
                <% for(let i=1; i <=totalPages; i++) { %>
                  <li class="page-item <%= i === currentPage ? 'active' : '' %>">
                    <% if (i===currentPage) { %>
                      <span class="page-link bg-white text-dark border-0">
                        <%= i %>
                      </span>
                      <% } else { %>
                        <a class="page-link" href="?page=<%= i %>&limit=<%= limit %>">
                          <%= i %>
                        </a>
                        <% } %>
                  </li>
                  <% } %>
                    <!-- Next Button -->
                    <% if (currentPage < totalPages) { %>
                      <li class="page-item">
                        <a class="page-link bg-dark" href="?page=<%= currentPage + 1 %>&limit=<%= limit %>">
                          <i class="fa-solid fa-caret-right text-white"></i>
                        </a>
                      </li>
                      <% } else { %>
                        <li class="page-item disabled">
                          <span class="page-link bg-dark"><i class="fa-solid fa-caret-right text-white"></i></span>
                        </li>
                        <% } %>
        </ul>
      </nav>
    </div>
    </main>
    </div>
    <%- include('../partials/admin/footer.ejs')%>