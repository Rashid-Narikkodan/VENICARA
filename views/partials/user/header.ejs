  <body class="d-flex flex-column w-100">
    <header class="p-md-4 pt-4 pb-4 w-100 shadow sticky-top position-relative">
      <% 
  // Fallback for search/filter variables
  const searchVal = typeof search !== 'undefined' ? search : '';
  const selectedCategoryVal = typeof selectedCategory !== 'undefined' ? selectedCategory : '';
  const sortVal = typeof sort !== 'undefined' ? sort : '';
  const minVal = typeof minPrice !== 'undefined' ? minPrice : '';
  const maxVal = typeof maxPrice !== 'undefined' ? maxPrice : '';
%>

      <div class="container-fluid">
        <div class="row">
          <div class="col-4 position-relative">
            <img class="logo img-fluid" src="/images/logo.avif" alt="" />
          </div>
          <div class="col-4 d-flex justify-content-center align-items-center">
            <a href="/home" class="text-decoration-none text-black"
              ><p class="d-inline mb-0 fw-semibold fs-md-text">HOME</p></a
            >
            <a href="/shop" class="text-decoration-none text-black"
              ><p class="d-inline ms-md-4 ms-2 mb-0 fw-semibold fs-md-text">
                SHOP
              </p></a
            >
          </div>
          <div class="col-4 d-flex justify-content-end align-items-center">
            <form action="/shop" class="searchForm position-relative d-md-inline-block d-none"
              id="search-form"
            >
              <input
                type="text"
                name="search"
                id="inputSearch"
                style="border-color: rgb(113, 89, 3) !important;padding:.4rem 1rem"
                class="form-control rounded-5 "
                placeholder="Search..."
                value="<%= searchVal %>"
              />
                <!-- Hidden fields to preserve filters if already on /shop -->
              <% if (selectedCategoryVal) { %>
                <input type="hidden" name="category" value="<%= selectedCategoryVal %>">
              <% } %>
              <% if (sortVal) { %>
                <input type="hidden" name="sort" value="<%= sortVal %>">
              <% } %> 
              <% if (minVal) { %>
                <input type="hidden" name="minPrice" value="<%= minVal %>">
              <% } %> 
              <% if (maxVal) { %>
                <input type="hidden" name="maxPrice" value="<%= maxVal %>">
              <% } %> 
              <button
                type="submit"
                id="cancel"
                style="
                  background: rgb(100, 80, 5);
                  border: none;
                  padding: 0.4rem 0.7rem;
                  right: 0rem;
                "
                class="btn border-0 rounded-5 position-absolute top-50 translate-middle-y"
              >
              <i class="text-white fa-solid fa-magnifying-glass"></i>
              </button>
            </form>
            <a href="https://app.thinkstack.ai/bot/previews/iframeview.html?bot=aHR0cHM6Ly9hcHAudGhpbmtzdGFjay5haS9ib3QvaW5kZXguaHRtbD9jaGF0Ym90X2lkPTY4ZDQxYTBhNjJlOGVjMDY5OWY2NGJlOCZ0eXBlPWlubGluZQ=="
              ><i class="fs-md-icon  fa-solid fa-comments ms-3" style="color:rgb(100, 80, 5)"></i>
            </a>
            <a href="/wishlist"
              ><i class=" fs-md-icon fa-regular fa-heart ms-3" style="color:rgb(100, 80, 5)"></i
            ></a>
            <a href="/cart"
              ><i class="fa-solid fa-cart-shopping fs-md-icon ms-3" style="color:rgb(100, 80, 5)"></i
            ></a>
            <a href="/profile"
              ><i class="fs-md-icon fa-regular fa-circle-user ms-3" style="color:rgb(100, 80, 5)"></i
            ></a>
          </div>
        </div>
        <div
          id="successBox"
          class="successBox w-100 d-flex justify-content-center"
        >
          <%if(messages.success.length>0){%>
          <div class="alert alert-success text-center w-md-25 w-75">
            <%=messages.success[0]%>
          </div>
          <%}%>
        </div>
        <div id="errorBox" class="errorBox w-100 d-flex justify-content-center">
          <%if(messages.error.length>0){%>
          <div
            id="headerError"
            class="alert alert-danger text-center w-md-25 w-75">
            <%=messages.error[0]%>
          </div>
          <%}%>
        </div>
      </div>
    </header>
   
