<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>VENICARA</title>

  <!-- Favicon -->
  <link rel="icon" type="image/png" sizes="96x96" href="/images/favicon-96x96.png" />
  <link rel="icon" type="image/png" sizes="32x32" href="/images/favicon-32x32.png" />
  <link rel="icon" type="image/png" sizes="16x16" href="/images/favicon-16x16.png" />
  <link rel="apple-touch-icon" href="/images/apple-touch-icon.png" />

  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-LN+7fdVzj6u52u30Kp6M/trliBMCMKTyK833zpbD+pXdCLuTusPj697FH4R/5mcr" crossorigin="anonymous">

  <!-- Notyf CSS -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/notyf@3/notyf.min.css" />

  <!-- Custom CSS -->
  <link rel="stylesheet" href="/css/userAuth.css" />
  <link rel="stylesheet" href="/css/userHeader.css" />

  <!-- FontAwesome -->
  <script src="https://kit.fontawesome.com/f45c5ea548.js" crossorigin="anonymous"></script>

  <!-- Notyf JS -->
  <script src="https://cdn.jsdelivr.net/npm/notyf@3/notyf.min.js"></script>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/js/bootstrap.bundle.min.js" integrity="sha384-ndDqU0Gzau9qJ1lfW4pNLlhNTkCfHzAVBReH9diLvGRem5+R9g2FzA8ZGN954O5Q" crossorigin="anonymous"></script>

  <!-- Custom JS -->
  <script defer src="/js/userHeader.js"></script>

  <style>
    .fs-md-icon { font-size: 1.75rem; }
    .fs-md-text { font-size: 1.3rem; }
    .cart-dot {
      padding: 0.3rem 0.4rem;
      border-radius: 30px;
      position: absolute;
      top: -0.6rem;
      right: -0.6rem;
      background: rgb(52,55,5);
      color: white;
      font-size: 0.6rem;
    }

    @media (max-width: 576px) {
      .fs-md-icon { font-size: 1.25rem; }
      .fs-md-text { font-size: 1rem; }
    }

    #searchResults {
      scrollbar-width: thin;
      scrollbar-color: #888 transparent;
    }
    #searchResults::-webkit-scrollbar { width: 6px; }
    #searchResults::-webkit-scrollbar-track { background: transparent; }
    #searchResults::-webkit-scrollbar-thumb {
      background-color: #888;
      border-radius: 10px;
    }
    #searchResults::-webkit-scrollbar-thumb:hover { background-color: #555; }
  </style>
</head>

<body class="d-flex flex-column w-100">

  <header class="p-md-4 pt-4 pb-4 w-100 shadow sticky-top position-relative">

    <% 
      // Fallback variables
      const searchVal = typeof search !== 'undefined' ? search : '';
      const selectedCategoryVal = typeof selectedCategory !== 'undefined' ? selectedCategory : '';
      const sortVal = typeof sort !== 'undefined' ? sort : '';
      const minVal = typeof minPrice !== 'undefined' ? minPrice : '';
      const maxVal = typeof maxPrice !== 'undefined' ? maxPrice : '';
    %>

    <div class="container-fluid">
      <div class="row">

        <!-- Logo -->
        <div class="col-4 position-relative">
          <img class="logo img-fluid" src="/images/logo.avif" alt="VENICARA" />
        </div>

        <!-- Navigation -->
        <div class="col-4 d-flex justify-content-center align-items-center">
          <a href="/home" class="text-decoration-none text-black">
            <p class="d-inline mb-0 fw-semibold fs-md-text">HOME</p>
          </a>
          <a href="/shop" class="text-decoration-none text-black">
            <p class="d-inline ms-md-4 ms-2 mb-0 fw-semibold fs-md-text">SHOP</p>
          </a>
        </div>

        <!-- Right Icons / Search -->
        <div class="col-4 d-flex justify-content-end align-items-center">

          <!-- Search Form -->
          <form action="/shop" id="search-form" class="searchForm position-relative d-md-inline-block d-none">
            <input
              type="text"
              name="search"
              id="inputSearch"
              class="form-control rounded-5"
              style="border-color: rgb(113,89,3); padding: 0.4rem 1rem;"
              placeholder="Search..."
              value="<%= searchVal %>"
            />
            <% if (selectedCategoryVal) { %>
              <input type="hidden" name="category" value="<%= selectedCategoryVal %>" />
            <% } %>
            <% if (sortVal) { %>
              <input type="hidden" name="sort" value="<%= sortVal %>" />
            <% } %>
            <% if (minVal) { %>
              <input type="hidden" name="minPrice" value="<%= minVal %>" />
            <% } %>
            <% if (maxVal) { %>
              <input type="hidden" name="maxPrice" value="<%= maxVal %>" />
            <% } %>

            <button
              type="submit"
              id="cancel"
              class="btn border-0 rounded-5 position-absolute top-50 translate-middle-y"
              style="background: rgb(100,80,5); padding: 0.4rem 0.7rem; right: 0;"
            >
              <i class="fa-solid fa-magnifying-glass text-white"></i>
            </button>
          </form>

          <!-- Chat -->
          <a href="https://app.thinkstack.ai/bot/previews/iframeview.html?bot=...">
            <i class="fs-md-icon fa-solid fa-comments ms-3" style="color: rgb(100,80,5)"></i>
          </a>

          <!-- Wishlist -->
          <a href="/wishlist">
            <i class="fs-md-icon fa-regular fa-heart ms-3" style="color: rgb(100,80,5)"></i>
          </a>

          <!-- Cart -->
          <a href="/cart" class="position-relative">
            <i class="fa-solid fa-cart-shopping fs-md-icon ms-3" style="color: rgb(100,80,5)">
              <div class="cart-dot" id="cart-count">0</div>
            </i>
          </a>

          <!-- Profile -->
          <a href="/profile">
            <i class="fs-md-icon fa-regular fa-circle-user ms-3" style="color: rgb(100,80,5)"></i>
          </a>
        </div>
      </div>

      <!-- Flash Messages -->
      <div id="successBox" class="successBox w-100 d-flex justify-content-center">
        <% if (messages.success.length > 0) { %>
          <div class="alert alert-success text-center w-md-25 w-75">
            <%= messages.success[0] %>
          </div>
        <% } %>
      </div>

      <div id="errorBox" class="errorBox w-100 d-flex justify-content-center">
        <% if (messages.error.length > 0) { %>
          <div id="headerError" class="alert alert-danger text-center w-md-25 w-75">
          <%= messages.error[0] %>
          </div>
        <% } %>
      </div>
    </div>

    <script>
      async function updateCartCount() {
        try {
          const res = await fetch("/api/cart/count");
          const data = await res.json();
          document.getElementById("cart-count").textContent = data.count;
        } catch (e) {
          console.error("Failed to fetch cart count:", e);
        }
      }
      updateCartCount();
      </script>
      </header>
